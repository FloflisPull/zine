user-select(s)
  user-select: s
  -moz-user-select: s
  -webkit-user-select: s
  -ms-user-select: s

comments, comment
  display: block
  padding: 1em

comment
  border: 1px solid black
  margin-bottom: 1em

  &:last-child
    margin-bottom: 0

  > .author
    color: gray
    font-size: 0.75em
    text-align: right

    &::before
      content: "-"

explorer
  display: block
  padding: 0.5em
  user-select: none

  body > &
    height: 100%
    width: 100%

  > file, > folder
    display: inline-block
    padding: 0.5em

    > icon
      display: block
      height: 32px
      margin: auto
      width: 32px

  > file > icon
    background-image: url("data:image/x-icon;base64,")

  > file[type^="text/"] > icon
    background-image: url("data:image/x-icon;base64,")

  > file[type="application/javascript"] > icon
    background-image: url("data:image/x-icon;base64,")

  > folder > icon
    background-image: url("data:image/x-icon;base64,")

chateau
  width: 100%
  height: 100%
  position: relative

  > word-area
    display: block
    pointer-events: none
    position: absolute
    width: 100%
    height: 100%

    > words
      border: 1px solid black
      border-radius: 4px
      background-color: white
      padding: 0.5em
      position: absolute
      display: inline-block

  > canvas
    display: block
    width: 100%
    height: 100%
    position: absolute

  > form
    position: absolute
    bottom: 0

  window > viewport > &
    margin: initial
